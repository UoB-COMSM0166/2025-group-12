    "target": "ES2020",
    "module": "ESNext",
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "noEmit": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
